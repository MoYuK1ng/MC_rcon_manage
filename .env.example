# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# RCON Encryption Key (DO NOT SHARE OR COMMIT THIS)
# This key is used to encrypt RCON passwords in the database
# 
# IMPORTANT:
# - Generate with: python generate_key.py
# - Must be a valid 44-character Fernet key
# - Never commit this key to version control
# - If you lose this key, you cannot decrypt existing passwords
# - Rotate periodically for security: python rotate_key.py --generate-new
#
# Verify your key: python verify_key.py
RCON_ENCRYPTION_KEY=your-fernet-key-here

# Allowed Hosts (comma-separated, no spaces)
# Add your domain name here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CSRF Trusted Origins (comma-separated, include protocol)
# Add your domain with https:// or http://
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,http://localhost:8000,http://127.0.0.1:8000

# Production Settings (uncomment for production)
# DB_NAME=irongate
# DB_USER=irongate
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432
